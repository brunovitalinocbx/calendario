<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .table {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }
        .time-slot {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
            cursor: pointer;
        }
        .reserved {
            background-color: #ff8080;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Agenda</h2>
        <div class="table">
            <div class="time-slot" data-time="18:30">18:30 - 19:20</div>
            <div class="time-slot" data-time="19:20">19:20 - 20:10</div>
            <div class="time-slot" data-time="20:10">20:10 - 21:10</div>
            <div class="time-slot" data-time="21:10">21:10 - 22:00</div>
        </div>
    </div>
    <script>
        // Adicione lógica JavaScript aqui para tratar as reservas de horário
        const timeSlots = document.querySelectorAll('.time-slot');

        timeSlots.forEach(slot => {
            slot.addEventListener('click', () => {
                if (slot.classList.contains('reserved')) {
                    // Se o horário já estiver reservado, cancelar a reserva
                    slot.classList.remove('reserved');
                } else {
                    // Caso contrário, fazer a reserva
                    slot.classList.add('reserved');
                }
            });
        });
    </script>
</body>
</html>





